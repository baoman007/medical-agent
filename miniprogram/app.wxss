/**app.wxss**/
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  padding: 20rpx;
}

.card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.warning-box {
  background: #fff3cd;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 24rpx;
  color: #856404;
  margin-top: 30rpx;
}

.urgency-box {
  padding: 24rpx;
  border-radius: 12rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.urgency-emergency {
  background: #fee;
  color: #c33;
}

.urgency-high {
  background: #ffe8cc;
  color: #f60;
}

.urgency-medium {
  background: #fff3cd;
  color: #856404;
}

.urgency-low {
  background: #d4edda;
  color: #155724;
}
